---
const { post } = Astro.props;
---

<div class="works-grid">
    {
        post.works.map((work) => (
            <div class="work-item">
                <div class="image-container">
                    <img
                        src={"https://s3.syrk.is/" + work.cover}
                        alt={work.title}
                    />{" "}
                </div>
                <h3>
                    <i>{work.title}</i>, {post.material}, {post.year}
                </h3>
            </div>
        ))
    }
</div>

<style>
    .works-grid {
        display: flex;
        flex-direction: column;
        gap: 4rem;
        padding: 2rem 0;
    }

    .work-item {
        display: flex;
        flex-direction: column;
        align-items: center;
    }

    .image-container {
        width: 95vw;
        height: 95vh;
        display: flex;
        justify-content: center;
        align-items: center;
    }

    .image-container img {
        max-width: 100%;
        max-height: 100%;
        object-fit: contain;
    }

    .work-item h3 {
        margin: 0;
        font-size: 1.2rem;
        letter-spacing: 0.1rem;
        font-weight: normal;
    }
</style>

<style is:global>
    @media (prefers-color-scheme: dark) {
        html,
        body {
            background-color: white;
            color: black;
        }
        svg,
        img {
            filter: invert(0);
        }
    }
    header,
    footer {
        display: true;
    }
</style>
