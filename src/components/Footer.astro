---
const isRoot = Astro.url.pathname === "/";
import Mail from "../components/Mail.astro";
---

{
    !isRoot && (
        <footer transition:name="footer">
            ———————
            <br />
            for all inquiries, write
            <br />
            <Mail user="desk" domain="syrkis.com" />
        </footer>
    )
}

<style>
    .root {
        display: none;
    }
    footer {
        text-align: center;
        padding: 5vh 0;
        line-height: 2.5;
    }
</style>

<script>
    class EmailLink extends HTMLElement {
        connectedCallback() {
            this.addEventListener("click", () => {
                const user = this.dataset.user;
                const domain = this.dataset.domain;
                window.location.href = `mailto:${user}@${domain}`;
            });
        }
    }

    customElements.define("email-link", EmailLink);
</script>
