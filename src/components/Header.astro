---
const isRoot = Astro.url.pathname === "/";
---

<header transition:name="header">
    <h1>NOAH SYRKIS</h1>
    <nav>
        <ul>
            <li><a href="/about">about</a></li>
            <li class="separator"><a href="/">|</a></li>
            <li><a href="/works">works</a></li>
        </ul>
    </nav>
</header>

<style>
    header {
        text-align: center;
        padding: 2rem 0;
        letter-spacing: 0.4em;
    }

    ul {
        list-style: none;
        padding: 0;
        margin: 0;
        display: flex;
        justify-content: center;
        gap: 1rem;
    }

    li {
        display: inline-block;
        padding: 0.5em;
        font-size: 1.2em;
    }

    a {
        color: inherit;
        text-decoration: none;
    }

    .separator {
        color: inherit;
    }
</style>
