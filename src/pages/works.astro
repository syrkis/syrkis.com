---
// works.astro
import { getCollection } from "astro:content";
import Layout from "../layouts/Layout.astro";
import List from "../components/List.astro";
const items = (await getCollection("works")).filter((x) => !x.data.hidden);
const contactText =
    "Balancing structure with and, these works explore archival aesthetics through geospatial and organic variations. Limited edition fine-art prints are available upon request to";
---

<Layout pageType="works">
    <List items={items} type="works" ContactText={contactText} />
</Layout>
