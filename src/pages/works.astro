---
import Header from "../components/Header.astro";
import Layout from "../layouts/Layout.astro";

const allPosts = Object.values(import.meta.glob("./posts/*.json", { eager: true })).sort((a, b) =>
    a.year < b.year ? 1 : -1,
);

const text = "These works investigate the visual principles of systems, from archival structures to organic patterns";
---

<Layout>
    <Header />
    <div class="posts-list">
        <span class="text">{text}</span>
        {
            allPosts.map((post: any) => (
                <div transition:name={post.slug}>
                    <a href={`/${post.slug}`}>
                        <div class="post-item" style={`background-image: url(https://s3.syrk.is/${post.cover})`}>
                            <h2>{post.title}</h2>
                        </div>
                    </a>
                </div>
            ))
        }
    </div>
</Layout>

<style>
    h2 {
        letter-spacing: 0.3em;
    }
    .posts-list {
        display: grid;
        gap: 150px;
        padding: 100px 0;
        width: 90%;
        margin: 0 auto;
    }
    .post-item {
        height: 70vh;
        border-radius: 20px;
        background-size: cover;
        width: 100%;
        background-position: center;
        display: flex;
        text-transform: uppercase;
        align-items: center;
        justify-content: center;
        transition: transform 1s ease-in-out;
        box-shadow: 0px 10px 30px rgba(0, 0, 0, 0.2);
    }
    .post-item:hover {
        transform: scale(1.05);
    }
</style>
