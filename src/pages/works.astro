---
import Header from "../components/Header.astro";
import Layout from "../layouts/Layout.astro";

const allSeries = Object.values(
    import.meta.glob("./series/*.json", { eager: true }),
).sort((a, b) => (a.year < b.year ? 1 : -1));

const allSlides = Object.values(
    import.meta.glob("./slides/*.typ", { eager: true }),
);

const text =
    "Exclusive limited edition archival prints are available upon request. For any inquiries, contact us at desk[at]syrkis.com";
---

<Layout>
    <Header />
    <div class="posts-list">
        <span class="text">{text}</span>
        {
            allSeries.map((post: any) => (
                <div transition:name={post.slug}>
                    <a href={`/${post.slug}`}>
                        <div
                            class="post-item"
                            style={`background-image: url(https://s3.syrk.is/${post.cover})`}
                        >
                            <h2>{post.title}</h2>
                        </div>
                    </a>
                </div>
            ))
        }
        <center>———————</center>
        <h2>TALKS</h2>
        {
            allSlides.map((post: any) => (
                <div transition:name={post.slug}>
                    <center>
                        <div class="slide">
                            <span>
                                <i>{post.frontmatter.title}</i>
                            </span>
                            <br />
                            <a href={`/${post.frontmatter.slug}`}>slide</a> |
                            video
                        </div>
                    </center>
                </div>
            ))
        }
    </div>
</Layout>

<style>
    h2 {
        letter-spacing: 0.3em;
    }
    .slide {
        font-size: 1.2em;
    }
    .posts-list {
        display: grid;
        gap: 150px;
        padding: 100px 0;
        width: 90%;
        margin: 0 auto;
    }
    .post-item {
        height: 70vh;
        border-radius: 20px;
        background-size: cover;
        width: 100%;
        background-position: center;
        display: flex;
        text-transform: uppercase;
        align-items: center;
        justify-content: center;
        transition: transform 1s ease-in-out;
        box-shadow: 0px 10px 30px rgba(0, 0, 0, 0.2);
    }
    .post-item:hover {
        transform: scale(1.05);
    }
</style>
