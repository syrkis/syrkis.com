---
// talks.astro
import { getCollection } from "astro:content";
import Layout from "../layouts/Layout.astro";
import List from "../components/List.astro";
const items = (await getCollection("talks")).filter((x) => !x.data.hidden);
const contactText =
    "These talks investigate the mechanisms of intelligence in contexts ranging computational to the cognitive and purely creative. For speaking engagements, contact";
---

<Layout pageType="talks">
    <List items={items} type="talks" ContactText={contactText} />
</Layout>
